/*轮播图*/
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/*导航*/
.navContainer {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 20rpx 0;
}

.navItem {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background-color: #7fc;
    font-size: 50rpx;
    color: #fff;
    margin-bottom: 10rpx;

}

.navItem text {
    font-size: 24rpx;
}

/*推荐歌曲*/
.recommendContainer {
    padding: 0 20rpx;
}

.recommendContainer .header .title {
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}

.recommendContainer .header .more {
    display: flex;
    justify-content: space-between;
}

.recommendContainer .header .more .search {
    border: 1rpx solid #333;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    border-radius: 30rpx;
}

.recommendScroll {
    margin-top: 10rpx;
    display: flex;
}

.scrollItem {
    width: 200rpx;
}

.scrollItem + .scrollItem {
    margin-left: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 24rpx;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}