<view class="indexContainer">
    <!--    轮播图 -->
    <swiper class="banners" indicator-dots indicator-color="ivory" indicator-active-color="#7fc" autoplay circular>
        <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
            <image src="{{item.pic}}"></image>
        </swiper-item>
    </swiper>
    <!--    导航区域-->
    <view class="navContainer">
        <view class="navItem">
            <text class="iconfont icon-jiaosequanxianpeizhi1"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-jiaosequanxianpeizhi1"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-jiaosequanxianpeizhi1"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-jiaosequanxianpeizhi1"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-jiaosequanxianpeizhi1"></text>
            <text>直播</text>
        </view>
    </view>
    <!--    推荐歌曲-->
    <view class="recommendContainer">
        <NavHeader title="推荐歌曲" nav="为你精心准备"></NavHeader>
        <scroll-view class="recommendScroll" enable-flex scroll-x>
            <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
                <image src="{{item.picUrl}}"></image>
                <text>{{item.name}}</text>
            </view>
        </scroll-view>
    </view>
    <!--   排行榜 -->
    <view class="topList">
        <NavHeader title="排行榜" nav="热歌风向标"></NavHeader>
        <swiper class="topListSwiper" next-margin="50rpx">
            <swiper-item wx:for="{{topList}}" wx:key="name">
                <view class="swiperItem">
                    <view class="title">{{item.name}}</view>
                    <view class="musicItem" wx:for="{{item.tracks}}" wx:key="id" wx:for-item="musicItem">
                        <image src="{{musicItem.al.picUrl}}"></image>
                        <text class="count">{{index + 1}}</text>
                        <text class="musicName">{{musicItem.name}}</text>
                    </view>
                </view>
            </swiper-item>
        </swiper>
    </view>
</view>