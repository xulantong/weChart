.videoContainer {
    padding: 10rpx;
}

.videoContainer .header {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.videoContainer .header image {
    width: 60rpx;
    height: 60rpx;
}

.videoContainer .header .search {
    width: 0;
    flex: auto;
    padding: 10rpx;
    border-bottom: 1rpx solid #eee;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    color: #7fc;
}

.navScroll {
    display: flex;
    white-space: nowrap;
    margin-top: 20rpx;
    height: 70rpx;
    margin-bottom: 10rpx;
}

.navItem {
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.navItem .active {
    border-bottom: 1rpx solid #7fc;
    height: 60rpx;
}

.videoScroll {
    margin-top: 10rpx;
}

.videoItem {
    padding: 10rpx;
}

.videoItem .avatarInfo {
    padding: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.videoItem .avatarInfo .left {
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.videoItem .avatarInfo .right {
    display: flex;
    align-items: center;
}
.item +.item{
    margin-left: 15rpx;
}
.number{
    font-size: 18rpx;
    position: relative;
    top: -30rpx;
}

.videoItem .avatarInfo image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.videoItem video {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}

.videoItem .footer {
    border-bottom: 1rpx solid #eee;
    padding: 20rpx;
    font-size: 28rpx;

}