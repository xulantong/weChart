.songDetailContainer {
    height: 100%;
    padding: 10rpx;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.6) 50%, rgba(0, 0, 0, 0.5) 95%);
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.author {
    color: #fff;
    font-size: 36rpx;
}

.circle {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #fff;
    position: absolute;
    top: 70rpx;
    transform: translateX(10%);
    z-index: 100;
}

.needle {
    width: 192rpx;
    height: 274rpx;
    position: relative;
    left: 60rpx;
    z-index: 99;
    margin-top: 40rpx;
    transform-origin: 40rpx 0;
    transition: transform 1s ease;
    transform: rotateZ(-40deg);
}

.discContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.disc {
    width: 600rpx;
    height: 600rpx;
    position: relative;
    top: -150rpx;
}

.needleRotate {
    transform: rotateZ(0);
}

.musicImage {
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
    position: absolute;
    top: -40rpx;
}
.discRotate{
    animation: musicImage linear 5s 0.5s infinite;
}

@keyframes musicImage {
    from {
        transform: rotateZ(0);
    }
    to {
        transform: rotateZ(1turn);
    }
}
.footerContainer{
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-around;
    position: absolute;
    bottom: 120rpx;
    padding-top: 40rpx;
    border-top: 1rpx solid #fff;
    color: #fff;
}
.footerContainer .iconfont{
    font-size: 55rpx;
}