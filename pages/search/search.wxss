.searchContainer {
    height: 100%;
    display: flex;
    padding: 20rpx;
    flex-direction: column;
}

.searchContainer .header {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.header .searchInput {
    width: 0;
    flex: 1;
    border-radius: 10rpx;
    display: flex;
    padding: 5rpx;
    align-items: center;
    background-color: #eee;
}

.searchInput .search {
    margin-right: 20rpx;
}

.searchInput .placeholder {
    font-size: 26rpx;
}

.header .cancel {
    width: 80rpx;
    text-align: center;
    font-size: 28rpx;
}

.hotContainer {
    height: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.hotList {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    font-size: 26rpx;
    border-top: 1rpx solid #eee;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    display: flex;
    align-items: center;

}

.hotItem .name {
    margin: 0 10rpx;
}

.hotItem image {
    width: 35rpx;
    height: 20rpx;
}

.searchResult {
    /*position: absolute;*/
    /*top:80rpx;*/
    width: 100%;
    padding: 10rpx;
    background-color: #fff;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 0;

}

.searchResult .keyWord {
    height: 80rpx;
    line-height: 80rpx;
    color: #7fc;
    border-bottom: 1rpx solid #7fc;
}

.searchList {
    height: 0;
    flex: 1;
}

.searchItem {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.searchItem .iconfont {
    margin-right: 20rpx;
}

.searchItem + .searchItem {
    margin-top: 10rpx;
}

.history {
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
}

.history .historyList {
    display: flex;
    flex-wrap: wrap;
    position: relative;
}

.historyList .delete {
    position: absolute;
    bottom: 17rpx;
    right: 0;
}

.historyList .historyItem {
    padding: 10rpx 20rpx;
    background-color: rgba(0, 0, 0, 0.3);
    color: #7fc;
    border-radius: 20rpx;
}

.historyItem {
    margin-right: 20rpx;
    margin-top: 20rpx;
}